<h2>New Celebrity</h2>

<form action="/celebrities/create" method="POST">
    <div>
        Name: 
        <input type="text" name="celebName">
    </div>

    <div>
        Occupation: 
        <input type="text" name="celebOccupation">
    </div>

    <div>
        Catch Phrase: 
        <input type="text" name="catchPhrase">
    </div>

    <div>
        Movies: 

        <select name="theMovie">
            {{#each movies}}
                <option value="{{this._id}}">{{this.title}}</option>
            {{/each}}
        </select>
    </div>


    <button>Submit</button>
</form>

<br>
<br>
<a href="/celebrities">Return Celebrities</a>